<%- include("layouts/header.ejs") -%>

<section class="mainSection">
    <main class="login-signup-section">
      <div class="container">
        <div class="accordion mainDivStyle" id="mainAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Login
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show m-3" aria-labelledby="headingOne" data-bs-parent="#mainAccordion">
              <div class="accordion-body">
                <form action="/login" method="post">
                  <div class="mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-control" type="text" name="usernameLogIn" id="usernameLogIn">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="pword">Password:</label>
                    <input class="form-control" type="text" name="pwordLogIn" id="pwordLogIn">
                  </div>
                  <div class="mb-3">
                    <p>Forgot Password? <a href="">Click Here</a></p>
                  </div>
                  <button class="btn btn-light" type="button">Sign Up</button>
                  <button class="btn btn-primary" type="submit">Login</button>
                </form>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Sign Up
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse m-3" aria-labelledby="headingTwo" data-bs-parent="#mainAccordion">
              <div class="accordion-body">
                <form action="/register" method="post">
                  <div class="mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-control" type="text" name="usernameReg" id="usernameReg">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="email">Email:</label>
                    <input class="form-control" type="email" name="emailReg" id="emailReg">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="pword">Password:</label>
                    <input class="form-control" type="text" name="pwordReg" id="pwordReg">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="pword">Confirm Password:</label>
                    <input class="form-control" type="text" name="confirmPwordReg" id="confirmPwordReg">
                  </div>
                  <button class="btn btn-light" type="button">Cancel</button>
                  <button class="btn btn-primary" type="submit">Sign up</button>
                </form>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
              <button class="accordion-logo accordion-button collapsed" type="button" data-bs-toggle="collapse">
                Cook of the Wild
              </button>
            </h2>
          </div>
        </div>
      </div>
    </main>
</section>


<%- include("layouts/footer.ejs") -%>
